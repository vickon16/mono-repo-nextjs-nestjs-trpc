{
  "extends" : "../../tsconfig.json",
  "compilerOptions": {
   // the following options are not required as they have a base config in the root tsconfig.json
  //  "paths": {
  //   "@/*": ["./src/*"]
  // }
  // "skipLibCheck": true,
  // "incremental": true,

   
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],

  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
